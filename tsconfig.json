{
	"compilerOptions": {
		"target": "es2018",
		"module": "commonjs",
		"lib": ["es2018"],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "../",
		"baseUrl": "../",
		"paths": {
			"@/*": ["src/*"]
		},
		"types": ["jest", "node"]
	},
	"include": ["../src/**/*", "../tests/**/*"],
	"exclude": ["../node_modules", "../dist"]
}
